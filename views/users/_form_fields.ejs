<div class="form-group">
    <label for="email">email</label>
    <input required value="<%= user.email %>" type="email" name="email" id="email" class="form-control">
</div>
<div class="form-group">
    <label for="password">password</label>
    <input name="password" id="password" class="form-control"><%= user.password %></input>
</div>
<div class="form-group">
    <label for="markdown">markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= post.markdown %></textarea>
</div>

<a href="/" class="btn btn-primary">cancel</a>
<button type="submit" class="btn btn-primary">save</button>